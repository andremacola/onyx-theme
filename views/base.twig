{#
 * Base (wrapper) theme template
 * @package Onyx Theme
#}

<!DOCTYPE html>
<html lang="pt-br">
	<head>
		{% include 'header.twig' %}
		{% block header %}{% endblock %}
	</head>

		<body class="{{body_class}}">
			<div style="max-width: 900px; margin: 30px auto;">
				<p><a href="/"><u>Home</u></a></p>
				<hr>
				{% block content %}{% endblock %}
				{% block sidebar %}
					{% include 'sidebar.twig' %}
				{% endblock %}

				{% block footer %}{% endblock %}
				{% include 'footer.twig' %}
			</div>
		</body>
</html>
